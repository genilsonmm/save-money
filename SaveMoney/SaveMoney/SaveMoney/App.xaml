            <Setter Property="HighlightForegroundColor" Value="#ffffff"/>
            <Setter Property="BackgroundColor" Value="#32c24d"/>
            <Setter Property="HighlightBackgroundColor" Value="#81E08F"/>
        </Style>-->
        
    </Application.Resources>
</prism:PrismApplication>